<mx:Box xmlns:mx="http://www.adobe.com/2006/mxml"
	width="100%" height="100%"
	creationComplete="filters=[ activeFilter ]"
	activate="filters=[ activeFilter ]"
	deactivate="filters=[ inactiveFilter ]"
	horizontalScrollPolicy="off" verticalScrollPolicy="off"
	xmlns:flash.filters="flash.filters.*" >
	
	
	<mx:filters>
		<flash.filters:DropShadowFilter id='activeFilter' knockout="true" quality="3" distance="3" angle="90" blurX="8" blurY="8" color="0x000000" alpha="1" />
	</mx:filters>
	
	<flash.filters:DropShadowFilter id='inactiveFilter' knockout="true" strength="1" quality="2" distance="1" angle="90" blurX="4" blurY="4" color="0x000000" alpha="0.45" />
		
	          
</mx:Box>